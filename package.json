{
  "name": "accessibility-assistant",
  "displayName": "accessibility_assistant",
  "description": "This extention allows the coder to write HTML code assisted by Gemini, with the ability to consult a documentation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:accessibility-assistant.helloWorld",
    "onView:documentation",
    "onView:analysis"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "accessibility_sidebar",
          "title": "Accessibility Sidebar",
          "icon": "resources/accessibility-icon.png"
        }
      ]
    },
    "views": {
      "accessibility_sidebar": [
        {
          "type": "webview",
          "id": "documentation",
          "name": "Documentation",
          "icon": "resources/accessibility-icon.png"
        },
        {
          "type": "webview",
          "id": "analysis",
          "name": "Analysis",
          "icon": "resources/accessibility-icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "accessibility-assistant.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "marked": "^17.0.3"
  }
}
